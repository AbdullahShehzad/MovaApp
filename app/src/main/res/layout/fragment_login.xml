<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="24dp"
    android:paddingBottom="48dp">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:src="@drawable/baseline_arrow_back_24" />

    <ImageView
        android:layout_width="@dimen/_96sdp"
        android:layout_height="@dimen/_96sdp"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/urbanistbold"
        android:gravity="center"
        android:text="@string/login"
        android:textColor="@color/grayScaleDark"
        android:textSize="32sp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:background="@drawable/round"
        android:drawableStart="@drawable/message"
        android:drawablePadding="12dp"
        android:hint="@string/emailHint"
        android:padding="20dp"
        android:textSize="14sp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/round"
        android:drawableStart="@drawable/lock"
        android:drawableEnd="@drawable/hide"
        android:drawablePadding="12dp"
        android:hint="@string/password"
        android:padding="20dp"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <CheckBox
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/checkboxstyle"
            android:button="@null"
            android:padding="0dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/urbanistbold"
            android:text="@string/rememberMe" />

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/buttonRed"
        android:fontFamily="@font/urbanistbold"
        android:gravity="center"
        android:text="@string/signIn"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:fontFamily="@font/urbanistbold"
        android:gravity="center"
        android:text="@string/forgotPassword"
        android:textColor="@color/buttonRed"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="27dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <View
            android:layout_width="96dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#EEEEEE" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/orContinueWith"
            android:textColor="@color/grayScaleMedium"
            android:textSize="18sp" />

        <View
            android:layout_width="96dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="#EEEEEE" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_style"
            android:clickable="true"
            android:focusable="true"
            android:paddingHorizontal="32dp"
            android:paddingVertical="18dp"
            android:src="@drawable/img" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:background="@drawable/button_style"
            android:paddingHorizontal="32dp"
            android:paddingVertical="18dp"
            android:src="@drawable/img_1" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_style"
            android:paddingHorizontal="32dp"
            android:paddingVertical="18dp"
            android:src="@drawable/img_2" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:text="@string/noAcc"
            android:textColor="#9E9E9E"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/sign_up_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/urbanistbold"
            android:text="@string/signUp"
            android:textColor="@color/buttonRed"
            android:textSize="14sp" />


    </LinearLayout>


</LinearLayout>